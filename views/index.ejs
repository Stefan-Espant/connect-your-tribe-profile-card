<%- include('./partials/head') %>

<body>

    <main>

        <section class="fullname">
            <span>
                <h1><%- member.name %></h1>
            </span>
            <span>
                <h1><%- member.prefix %> <%- member.surname %></h1>
            </span>
        </section>

        <section class="business-card">
            <img src=" <%- member.avatar %> " alt="<%- member.name %> <%- member.prefix %> <%- member.surname %>" />
            <h2><%- member.name %> <%- member.prefix %> <%- member.surname %></h2>
            <p> <%- member.role %> </p>
            <article>
                <p><%- member.bio.html %></p>
            </article>

            <%- include('./partials/socials') %>
        </section>

    </main>

    <%- include('./partials/foot') %>
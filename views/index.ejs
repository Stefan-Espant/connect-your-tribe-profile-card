<%- include('./partials/head') %>
<% console.log(member) %>
<body>

    <main>

        <section class="fullname">
            <div>
                <h1><%- member.name %></h1>
            </div>
            <div>
                <h1><%- member.prefix %> <%- member.surname %></h1>
            </div>
        </section>
        <section class="business-card">
            <article>
                <img src=" <%- member.avatar %> " alt="<%- member.name %> <%- member.prefix %> <%- member.surname %>" />
            </article>
            <article>
                <h2><%- member.name %> <%- member.prefix %> <%- member.surname %></h2>
                <p> <%- member.role %> <%- member.squads.name %> <%- member.squads.cohort %> </p>
                    <p><%- member.bio.html %></p>
            </div>
        </section>
        <section class="comments">
            <% member.shouts.forEach(shout => { %>
                <article>
                  <h2><%= shout.author %></h2>
                  <p><%= shout.text %></p>
                </article>
                <% }) %>
        </section>

    </main>
    <dialog class="dialog-comment">
        <h2>Laat een reactie achter</h2>
        <form action="/" method="post">
            <input type="hidden" name="id" id="id" value="<%= member.id %>" />
            <label for="author">Naam</label>
            <input name="author" id="author" required>
            <label for="text">Opmerking</label>
            <textarea name="text" id="text" cols="30" rows="10" required></textarea>
            <input type="submit" value="verzenden" />
        </form>
      </dialog>

      <footer>
        <button class="dialog-comment-button"><svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path fill-rule="evenodd" clip-rule="evenodd" d="M2 16C2 17.1046 2.89543 18 4 18H6V21.7732C6 22.636 7.01946 23.0938 7.66436 22.5206L12.75 18H20C21.1046 18 22 17.1046 22 16V5C22 3.89543 21.1046 3 20 3H4C2.89543 3 2 3.89543 2 5V16ZM8 18C8 16.8954 7.10457 16 6 16H4V5L20 5V16H12.75C12.2602 16 11.7874 16.1798 11.4213 16.5052L8 19.5463V18Z" fill="var(--c-primary-0)"/>
            </svg>
            Schrijf een reactie</button>
      </footer>

    <%- include('./partials/foot') %>